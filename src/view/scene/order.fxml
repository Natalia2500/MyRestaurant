<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.sceneControllers.OrderController">
   <children>
      <HBox prefWidth="200.0">
         <children>
            <AnchorPane prefHeight="40.0" prefWidth="40.0">
               <children>
                  <ImageView fitHeight="32.0" fitWidth="32.0" layoutX="4.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../style/img/order-icons/main-icon.png" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
            <AnchorPane fx:id="numberLabelContainer">
               <children>
                  <Label fx:id="numberLabel" alignment="CENTER" contentDisplay="CENTER" layoutY="10.0" text="numero">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </Label>
               </children>
            </AnchorPane>
            <AnchorPane fx:id="dateLabelContainer">
               <children>
                  <Label fx:id="dateLabel" alignment="CENTER" layoutY="10.0" text="21/09/2022">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </Label>
               </children>
            </AnchorPane>
            <AnchorPane fx:id="supplierLabelContainer">
               <children>
                  <Label fx:id="supplierLabel" alignment="CENTER" layoutY="10.0" text="Fornitore">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </Label>
               </children>
            </AnchorPane>
            <AnchorPane fx:id="checkBoxContainer">
               <children>
                  <Button fx:id="deliveredBtn" layoutY="8.0" mnemonicParsing="false" onMouseClicked="#setDelivered" text="Consegnato" />
               </children>
            </AnchorPane>
         </children>
      </HBox>
   </children>
</AnchorPane>
