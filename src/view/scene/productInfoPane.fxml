               </children>
               <padding>
                  <Insets left="20.0" top="20.0" />
               </padding>
            </HBox>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <CustomLineChart fx:id="storeQuantityChart" prefHeight="360.0" prefWidth="500.0" title="Uso mensile nell'ultimo anno">
                    <xAxis>
                      <CategoryAxis label="Mesi" side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis label="Quantità" side="LEFT" />
                    </yAxis>
                  </CustomLineChart>
               </children>
            </AnchorPane>
            <Button fx:id="chooseImgBtn" mnemonicParsing="false" onMouseClicked="#chooseImgForProduct" text="Scegli immagine" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
