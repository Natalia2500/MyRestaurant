<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.sceneControllers.OrderPaneController">
   <top>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="statusLabel" layoutX="236.0" layoutY="1.0" text="Ordini in consegna">
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <AnchorPane fx:id="searchComponentContainer" />
            <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="SOMETIMES">
               <content>
                  <GridPane fx:id="ordersContainer" hgap="15.0">
                  </GridPane>
               </content>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </ScrollPane>
            <AnchorPane fx:id="pageSelectionContainer" VBox.vgrow="NEVER">
               <children>
                  <Button fx:id="previousPageBtn" layoutX="14.0" layoutY="2.0" mnemonicParsing="false" onMouseClicked="#goToPreviousPage" text="&lt;" />
                  <Button fx:id="nextPageButton" layoutX="50.0" layoutY="2.0" mnemonicParsing="false" onMouseClicked="#goToNextPage" text="&gt;" />
                  <ComboBox fx:id="pageLengthSelector" layoutX="107.0" layoutY="1.0" onAction="#changePageLength" />
                  <Button fx:id="changeRenderingModeBtn" layoutX="181.0" layoutY="2.0" mnemonicParsing="false" onMouseClicked="#changeRenderingMode" text="Storico Ordini" AnchorPane.rightAnchor="90.0" />
                  <Button fx:id="newOrderBtn" layoutX="295.0" layoutY="1.0" mnemonicParsing="false" onMouseClicked="#newOrderBtnClicked" text="Nuovo Ordine" />
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </center>
</BorderPane>
