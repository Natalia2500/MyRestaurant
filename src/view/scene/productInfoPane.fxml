                              <Label layoutX="32.0" layoutY="-1.0" text="Quantità disponibile:">
                                 <padding>
                                    <Insets left="20.0" />
                                 </padding>
                                 <font>
                                    <Font size="20.0" />
                                 </font>
                              </Label>
                              <Label fx:id="qtyLabel" layoutX="32.0" layoutY="24.0" prefWidth="153.0">
                                 <font>
                                    <Font size="20.0" />
                                 </font>
                                 <padding>
                                    <Insets left="20.0" top="5.0" />
                                 </padding>
                              </Label>
                           </children>
                        </AnchorPane>
                        <AnchorPane prefWidth="200.0">
                           <children>
