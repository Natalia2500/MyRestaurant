<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>

<BorderPane fx:id="storeMainPane" styleClass="centralPane" stylesheets="@../style/categorypane.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CategoryPaneController">
   <top>
      <Label text="Magazzino" BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="addCategoryButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#addCategoryButtonClicked" text="aggiungi categoria" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0" />
         </children>
      </AnchorPane>
   </bottom>
   <center>
      <GridPane fx:id="categoryContainer" hgap="20.0" vgap="20.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="20.0" top="20.0" />
         </padding>
         <columnConstraints>
            <ColumnConstraints  percentWidth="33" />
            <ColumnConstraints  percentWidth="33" />
            <ColumnConstraints  percentWidth="33" />
         </columnConstraints>        
      </GridPane>
   </center>
</BorderPane>
