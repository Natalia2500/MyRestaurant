<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane fx:id="chartBorderPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.sceneControllers.ChartPaneController">
   <center>
      <ScrollPane fx:id="container" fitToHeight="true" fitToWidth="true">
         <content>
            <GridPane fx:id="chartsGridPane" hgap="10.0" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints percentWidth="50" />
                <ColumnConstraints percentWidth="50" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints vgrow="ALWAYS" />
                  <RowConstraints vgrow="ALWAYS" />
                  <RowConstraints vgrow="ALWAYS" />
              </rowConstraints>
               <children>
                  <HBox fx:id="revenueTrendChart" alignment="CENTER" minHeight="400.0" />
                  <HBox fx:id="warehouseCompositionChart" alignment="CENTER" minHeight="400.0" GridPane.columnIndex="1" />
                  <HBox fx:id="utilityCostsChart" alignment="CENTER" minHeight="400.0" GridPane.rowIndex="1" />
                  <HBox fx:id="moreOrderedDishesChartContainer" alignment="CENTER" minHeight="400.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <BorderPane>
                           <left>
                              <Button fx:id="leftBtn" mnemonicParsing="false" onMouseClicked="#previousMonth" text="&lt;" BorderPane.alignment="CENTER" />
                           </left>
                           <right>
                              <Button fx:id="rightBtn" mnemonicParsing="false" onMouseClicked="#followingMonth" text="&gt;" BorderPane.alignment="CENTER" />
                           </right>
                           <center>
                              <AnchorPane fx:id="moreOrderedDishesChart" BorderPane.alignment="CENTER" />
                           </center>
                        </BorderPane>
                     </children>
                  </HBox>
                  <HBox fx:id="revenueOrdersComparisonChart" alignment="CENTER" minHeight="400.0" GridPane.rowIndex="2" />
                  <HBox fx:id="revenueUtilitiesComparisonChart" alignment="CENTER" minHeight="400.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               </children>
            </GridPane>
         </content>
      </ScrollPane>
   </center>
   <stylesheets>
      <URL value="@../style/css/chart.css" />
      <URL value="@../style/css/common.css" />
   </stylesheets>
</BorderPane>
