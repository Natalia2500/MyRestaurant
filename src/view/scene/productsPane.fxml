<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainContainer" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.sceneControllers.ProductsPaneController">
   <center>
      <GridPane fx:id="productsContainer" hgap="20.0" vgap="20.0">
          <padding>
            <Insets bottom="20.0" left="20.0" top="20.0" />
         </padding>
          <columnConstraints>
            <ColumnConstraints percentWidth="33" />
            <ColumnConstraints percentWidth="33" />
            <ColumnConstraints percentWidth="33" />
         </columnConstraints>
      </GridPane>
   </center>
   <top>
      <HBox>
         <children>
            <VBox>
               <children>
                  <Label fx:id="categoryLabel" />
                  <TextField fx:id="searchBar" />
               </children>
            </VBox>
            <AnchorPane HBox.hgrow="ALWAYS">
               <children>
                  <Button text="Nuovo Ordine" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="20.0" />
               </children>
            </AnchorPane>
         </children>
      </HBox>
   </top>
   <bottom>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="addProductBtn" mnemonicParsing="false" onAction="#addProductBtnClicked" text="Aggiungi prodotto" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="30.0" />
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
