<BorderPane fx:id="employeesPane" prefHeight="206.0" prefWidth="353.0" styleClass="scrollPane" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.sceneControllers.EmployeesListController">
   <bottom>
      <Button fx:id="addEmployeeBtn" mnemonicParsing="false" onAction="#insertEmployeeBtnClicked" prefHeight="38.0" prefWidth="206.0" style="-fx-background-color: ea613f;" styleClass="custom-button" stylesheets="@../style/css/customButton.css" text="Aggiungi dipendente" BorderPane.alignment="BOTTOM_RIGHT">
         <graphic>
            <ImageView fitHeight="18.0" fitWidth="18.0" layoutX="12.0" layoutY="12.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../style/img/buttons-icon/add2.png" />
               </image>
            </ImageView>
         </graphic>
         <BorderPane.margin>
            <Insets bottom="20.0" right="20.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
   <top>
      <HBox prefHeight="45.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="titoloLbl" text="Dipendenti">
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin></Label>
            <TextField fx:id="searchBar" styleClass="searchBarTextField" stylesheets="@../style/css/store.css" />
            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../style/img/others/search.png" />
               </image>
            </ImageView>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets top="20.0" />
         </BorderPane.margin>
      </HBox>
   </top>
   <center>
      <ScrollPane fx:id="employeeListScrollPane" stylesheets="@../style/css/common.css" BorderPane.alignment="CENTER">
        <content>
            <GridPane fx:id="employeesGridPane" hgap="20.0" vgap="20.0">
              <columnConstraints> 
                  <ColumnConstraints percentWidth="50" />   
                  <ColumnConstraints percentWidth="50" />
              </columnConstraints>
               <padding>
                  <Insets left="30.0" top="30.0" />
               </padding>
            </GridPane>
        </content>
         <padding>
            <Insets right="30.0" top="20.0" />
         </padding>
      </ScrollPane>
   </center>
